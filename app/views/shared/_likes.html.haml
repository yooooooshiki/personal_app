- if user_signed_in?
  - if article.like_user(current_user.id)
    = button_to article_like_path(article, like), method: :delete, remote: true do
      %i.fas.fa-check いいね済み
      -# %span
      -#   = article.likes_count
  - else
    = button_to article_likes_path(article), remote: true do
      %i.fas.fa-thumbs-up
      -# %span
      -#   = article.likes_count
- else
  %i.fas.fa-thumbs-up
  %span
    = article.likes_count