.wrapper
  = render 'shared/header'
  .main
    .hoge
    .hoge2
      .item-title
        Articles
      .item-list-block
        - @articles.each do |article|
          .item-list.clearfix
            %a.item-list-image{ href: ''}
              %img{ alt: '', src: '', width: 'auto', height: 'auto'}
            .item-list-big
              .item-list-content
                = link_to article_path(article.id) do
                  = article.title
              .item-list-under
                %span.user1
                  by
                %a.user2
                  = link_to user_path(article.user.id) do
                    = article.user.name
                .time
                  = article.updated_at.strftime("%Y/%m/%d")
                .good-mark
                  .comment
                    .action
                  .good
                    .action
                      %i.fas.fa-thumbs-up 
                      %span
                        = article.likes_count
                  .stock
                    .action
                      -# = link_to "登録", add_article_path(article), method: :post 
      .pagination
        = paginate(@articles)
    .hoge3
  = render 'shared/footer'
